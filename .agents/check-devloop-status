#!/bin/bash
# Check if devloop watch is running and provide helpful feedback
# Usage: ./.agents/check-devloop-status

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if devloop watch is running
if ps aux | grep -v grep | grep -q "devloop watch"; then
    echo -e "${GREEN}✅ devloop watch is running${NC}"
    echo ""
    ps aux | grep "devloop watch" | grep -v grep | awk '{print "   PID:", $2, "RSS:", $6" KB"}'
    exit 0
else
    echo -e "${RED}❌ devloop watch is NOT running${NC}"
    echo ""
    echo "To start devloop, run one of:"
    echo ""
    echo "  # Background process (recommended):"
    echo "  nohup devloop watch . > .devloop/devloop.log 2>&1 &"
    echo ""
    echo "  # Or directly:"
    echo "  devloop watch ."
    echo ""
    echo "After starting, verify with:"
    echo "  ps aux | grep 'devloop watch' | grep -v grep"
    echo ""
    exit 1
fi
